<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/txtBienvenidaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido..."
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="35sp">
    </TextView>

    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="140dp">
    </TextView>

    <Button
        android:id="@+id/btnEventos"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Atender Eventos"
        android:backgroundTint="#4568ad"
        android:onClick="IrAtenderEventos"
        android:textSize="40sp"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/btnCrearEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Evento"
        android:backgroundTint="#95b877"
        android:onClick="IrCrearEventos"
        android:textSize="30sp">
    </Button>



    <Button
        android:id="@+id/btnAsistenciaEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asistencia de Eventos"
        android:onClick="IrAsistenciasEventos"
        android:textSize="30sp">
    </Button>
    <Button
        android:id="@+id/btnlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesiÃ³n"
        android:onClick="Logout"
        android:textSize="30sp">
    </Button>


</LinearLayout>